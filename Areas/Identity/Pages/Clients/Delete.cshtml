@page
@model WebApplication_AuthenticationSystem_.Areas.Identity.Pages.Clients.DeleteModel

<h2>Delete Client</h2>

<p>Are you sure you want to delete this client?</p>

<div>
    <h4>@Model.Client.firstname @Model.Client.lastname</h4>
    <div>
        <p>Email: @Model.Client.email</p>
        <p>Phone: @Model.Client.phone</p>
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="Client.id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Clients/Index" class="btn btn-secondary">Cancel</a>
</form>
